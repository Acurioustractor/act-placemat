{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "esnext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "exactOptionalPropertyTypes": true,
    "noPropertyAccessFromIndexSignature": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "noEmit": false,
    "importHelpers": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "paths": {
      "@/*": ["./src/*"],
      "@act/schemas": ["packages/schemas/src/index.ts"],
      "@act/shared": ["packages/shared/src/index.ts"],
      "@act/shared/*": ["packages/shared/src/*"],
      "@act/types": ["packages/types/src/index.ts"],
      "@act/types/*": ["packages/types/src/*"],
      "@act/utils": ["packages/utils/src/index.ts"],
      "@act/utils/*": ["packages/utils/src/*"],
      "@act/security": ["packages/security/src/index.ts"],
      "@act/security/*": ["packages/security/src/*"],
      "@act/data-services": ["packages/data-services/src/index.ts"],
      "@act/data-services/*": ["packages/data-services/src/*"],
      "@act/test-utils": ["packages/test-utils/src/index.ts"],
      "@act/test-utils/*": ["packages/test-utils/src/*"]
    },
    "types": ["node", "jest", "vite/client"],
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.json"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "tmp",
    ".next",
    ".cache",
    "*.min.js"
  ]
}
