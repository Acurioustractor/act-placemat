# ACT Platform - Production Environment Variables
# Copy this file to .env.production and customize for your environment

#############################################################################
# DATABASE CONFIGURATION
#############################################################################

# PostgreSQL database password (REQUIRED)
DB_PASSWORD=your-secure-database-password-here

# Redis cache password (REQUIRED)
REDIS_PASSWORD=your-secure-redis-password-here

#############################################################################
# SECURITY AND AUTHENTICATION
#############################################################################

# JWT secret for token signing (REQUIRED - use a strong random key)
JWT_SECRET=your-jwt-secret-key-at-least-32-characters-long

# Encryption key for sensitive data (REQUIRED - exactly 32 bytes base64)
ENCRYPTION_KEY=base64-encoded-32-byte-key-here

# Session secret for cookie signing (REQUIRED)
SESSION_SECRET=your-session-secret-key-here

# Valid API keys for service authentication (comma-separated)
VALID_API_KEYS=api-key-1,api-key-2,api-key-3

#############################################################################
# EXTERNAL SERVICE INTEGRATIONS
#############################################################################

# Slack webhook for alerts and notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email service configuration
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
SMTP_FROM=noreply@actplacemat.org

# Notion integration (if using Notion CMS)
NOTION_API_KEY=secret_your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# Google Services (Analytics, Maps, etc.)
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

#############################################################################
# MONITORING AND OBSERVABILITY
#############################################################################

# Grafana admin password
GRAFANA_PASSWORD=your-grafana-admin-password

# External monitoring endpoints
MONITORING_ENDPOINT=https://your-monitoring-service.com/api/metrics
ALERTING_WEBHOOK=https://your-alerting-service.com/webhook

# Log aggregation
ELK_ENDPOINT=https://your-elasticsearch-endpoint.com
LOG_LEVEL=info

#############################################################################
# FILE STORAGE AND MEDIA
#############################################################################

# S3-compatible storage (AWS S3, MinIO, etc.)
S3_ENDPOINT=https://your-s3-endpoint.com
S3_BUCKET=act-platform-uploads
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Local file storage paths
UPLOAD_PATH=/opt/act-platform/uploads
BACKUP_PATH=/opt/act-platform/backups

#############################################################################
# SOCIAL MEDIA INTEGRATIONS
#############################################################################

# LinkedIn integration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Twitter/X integration  
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

#############################################################################
# COMPLIANCE AND PRIVACY
#############################################################################

# GDPR/Privacy compliance settings
PRIVACY_POLICY_URL=https://actplacemat.org/privacy
TERMS_OF_SERVICE_URL=https://actplacemat.org/terms
DATA_RETENTION_DAYS=2555  # 7 years for financial records

# Indigenous data sovereignty contacts
CULTURAL_GOVERNANCE_EMAIL=cultural-governance@actplacemat.org
ELDER_REVIEW_EMAIL=elders@actplacemat.org

#############################################################################
# PERFORMANCE AND SCALING
#############################################################################

# Node.js performance tuning
NODE_OPTIONS=--max-old-space-size=2048
UV_THREADPOOL_SIZE=16

# Rate limiting
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=1000

# Caching configuration
CACHE_TTL=3600  # 1 hour in seconds
REDIS_TTL=86400  # 24 hours in seconds

#############################################################################
# BACKUP AND DISASTER RECOVERY
#############################################################################

# Automated backup settings
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=90
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key

# Database backup
DB_BACKUP_PATH=/opt/act-platform/postgres-backups
DB_BACKUP_SCHEDULE=0 1 * * *  # Daily at 1 AM

#############################################################################
# SSL/TLS CERTIFICATES
#############################################################################

# SSL certificate paths (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Let's Encrypt configuration
LETSENCRYPT_EMAIL=admin@actplacemat.org
LETSENCRYPT_DOMAINS=actplacemat.org,www.actplacemat.org,api.actplacemat.org

#############################################################################
# DEVELOPMENT AND TESTING
#############################################################################

# Feature flags for production testing
FEATURE_NEW_DASHBOARD=false
FEATURE_ENHANCED_SEARCH=true
FEATURE_AI_RECOMMENDATIONS=false

# Debug and testing
DEBUG_MODE=false
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/act_test

#############################################################################
# TIMEZONE AND LOCALIZATION
#############################################################################

# Server timezone (Australian Eastern Time)
TZ=Australia/Sydney

# Default language and locale
DEFAULT_LANGUAGE=en-AU
DEFAULT_CURRENCY=AUD
DEFAULT_TIMEZONE=Australia/Sydney

#############################################################################
# SECURITY HEADERS AND CORS
#############################################################################

# CORS configuration
CORS_ORIGIN=https://actplacemat.org,https://www.actplacemat.org
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Content Security Policy
CSP_REPORT_URI=https://actplacemat.report-uri.com/r/d/csp/enforce

#############################################################################
# EXAMPLE GENERATION COMMANDS
#############################################################################

# Generate secure random keys using Node.js:
# 
# JWT_SECRET:
# node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
#
# ENCRYPTION_KEY (32 bytes base64):
# node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
#
# SESSION_SECRET:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# API_KEY:
# node -e "console.log('act-' + require('crypto').randomBytes(24).toString('base64url'))"