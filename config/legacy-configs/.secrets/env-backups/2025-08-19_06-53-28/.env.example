# Notion MCP Configuration
# Copy this file to .env and fill in your actual values

# Your Notion Integration Token
# Get this from: https://www.notion.so/my-integrations
NOTION_TOKEN=

# Notion Database IDs
# Get these from each database URL: https://notion.so/your-workspace/DATABASE_ID?v=...

# Projects Database (Required)
NOTION_DATABASE_ID=
# or use NOTION_PROJECTS_DB=

# Opportunities Database (Recommended)
NOTION_OPPORTUNITIES_DB=

# Organizations Database (Optional)
NOTION_ORGANIZATIONS_DB=

# People Database (Optional)
NOTION_PEOPLE_DB=

# Artifacts Database (Optional)
NOTION_ARTIFACTS_DB=

# Optional: Notion API Version (defaults to 2022-06-28)
NOTION_API_VERSION=2022-06-28

# Application Settings
# Cache timeout in milliseconds (default: 5 minutes)
CACHE_TIMEOUT=300000

# Auto-refresh interval in milliseconds (default: 5 minutes)
AUTO_REFRESH_INTERVAL=300000

# API retry settings
MAX_API_RETRIES=3
API_RETRY_DELAY=1000

# Logging level: ERROR, WARN, INFO, DEBUG (default: INFO in production, DEBUG in development)
LOG_LEVEL=INFO

# Airtable Configuration (Optional)
# Get your API key from: https://airtable.com/account

# Your Airtable Personal Access Token
AIRTABLE_API_KEY=

# Your Airtable Base ID
# Get this from your base URL: https://airtable.com/BASE_ID/...
AIRTABLE_BASE_ID=

# Airtable Table Names (defaults shown)
AIRTABLE_PROJECTS_TABLE=Projects
AIRTABLE_OPPORTUNITIES_TABLE=Opportunities
AIRTABLE_ORGANIZATIONS_TABLE=Organizations
AIRTABLE_PEOPLE_TABLE=People
AIRTABLE_ARTIFACTS_TABLE=Artifacts