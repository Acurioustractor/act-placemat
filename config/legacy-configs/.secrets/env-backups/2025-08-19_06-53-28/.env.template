# ACT Ecosystem Environment Configuration
# Copy this to .env and fill in your actual values
# All systems are designed with fallbacks - partial setup still works

# =============================================================================
# CORE AI PROVIDERS (At least ONE required for full functionality)
# =============================================================================

# Anthropic Claude (Primary - Required for Task Master AI)
ANTHROPIC_API_KEY=

# Perplexity (Research Features - Highly Recommended)
PERPLEXITY_API_KEY=

# OpenAI (Fallback/Additional Models)
OPENAI_API_KEY=

# Additional AI Providers (Optional)
GOOGLE_API_KEY=
XAI_API_KEY=
OPENROUTER_API_KEY=
MISTRAL_API_KEY=
AZURE_OPENAI_API_KEY=
OLLAMA_API_KEY=

# =============================================================================
# DATABASE & STORAGE (Required for persistence)
# =============================================================================

# Supabase (Primary database)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_ANON_KEY=

# Redis (Optional - improves performance)
REDIS_URL=redis://localhost:6379

# =============================================================================
# BUSINESS SYSTEMS INTEGRATION
# =============================================================================

# Xero (Financial/Compliance Bots)
XERO_CLIENT_ID=
XERO_CLIENT_SECRET=
XERO_REDIRECT_URI=http://localhost:4000/auth/xero/callback

# Notion (Knowledge Management + MCP Integration)
NOTION_TOKEN=
NOTION_INTEGRATION_TOKEN=
NOTION_DATABASE_PROJECTS=
NOTION_DATABASE_PEOPLE=
NOTION_DATABASE_ORGANIZATIONS=
NOTION_DATABASE_OPPORTUNITIES=

# GitHub Integration (MCP)
GITHUB_PERSONAL_ACCESS_TOKEN=

# Gmail (Intelligence Monitoring)
GMAIL_SERVICE_ACCOUNT_PATH=
GMAIL_IMPERSONATE_EMAIL=

# Slack (Team Communication Monitoring)
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_SIGNING_SECRET=

# =============================================================================
# MESSAGING & EVENTS (Optional - improves real-time features)
# =============================================================================

# Kafka (Event Streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=act-ecosystem

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-too

# Session Security
SESSION_SECRET=your-session-secret-key-change-this

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
NODE_ENV=development
PORT=4000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ecosystem.log

# Learning System
LEARNING_ENABLED=true
LEARNING_CYCLE_HOURS=1
COMMUNITY_SHARING_ENABLED=true

# Performance
MAX_CONCURRENT_WORKFLOWS=10
BOT_TIMEOUT_SECONDS=300
FARMHAND_TIMEOUT_SECONDS=60

# =============================================================================
# EXTERNAL SERVICE ENDPOINTS (Usually don't need to change)
# =============================================================================

# ATO Integration (for compliance)
ATO_API_ENDPOINT=https://api.ato.gov.au
ATO_CLIENT_ID=
ATO_CLIENT_SECRET=

# Australian Business Register
ABR_GUID=

# =============================================================================
# MONITORING & ALERTING (Optional)
# =============================================================================

# Sentry (Error Tracking)
SENTRY_DSN=

# Email Notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ALERT_EMAIL=

# =============================================================================
# DEVELOPMENT SETTINGS (Only for dev/testing)
# =============================================================================

# Mock Mode (bypasses external APIs for testing)
MOCK_MODE=false
DEBUG_WORKFLOWS=false
SKIP_AUTH=false