# ACT Placemat Intelligence Hub - Environment Configuration Template
# Copy this file to .env and configure for your environment

# Application Settings
NODE_ENV=development
PORT=3002
HOST=localhost
FRONTEND_URL=http://localhost:3000

# AI Model API Keys (at least one required)
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Redis Configuration (for task queue and state management)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Database Configuration (optional - for persistent storage)
DATABASE_URL=postgresql://username:password@localhost:5432/act_placemat_intelligence

# Monitoring and Logging
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=

# Security (required for production)
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_here_must_be_32_chars

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Agent Performance
MAX_CONCURRENT_TASKS=10
TASK_TIMEOUT=300000

# Australian Localisation (defaults provided)
TIMEZONE=Australia/Sydney
LOCALE=en-AU
CURRENCY=AUD

# Development Options
DEBUG=intelligence-hub:*
ENABLE_AGENT_DEBUGGING=false
MOCK_AI_RESPONSES=false

# Production Security Settings
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,https://your-domain.com.au
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# Agent-Specific Configuration
FINANCIAL_INTELLIGENCE_ENABLED=true
RESEARCH_ANALYST_ENABLED=true
COMPLIANCE_OFFICER_ENABLED=true
COMMUNITY_COORDINATOR_ENABLED=true

# Task Queue Configuration
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000
QUEUE_CLEANUP_INTERVAL=3600000

# State Management
STATE_PERSISTENCE_ENABLED=true
STATE_BACKUP_INTERVAL=1800000
STATE_RETENTION_DAYS=30

# Monitoring Dashboard
DASHBOARD_ENABLED=true
DASHBOARD_REFRESH_INTERVAL=5000
REAL_TIME_UPDATES=true

# Australian Business Data Integration
ABN_LOOKUP_ENABLED=false
ABN_LOOKUP_API_KEY=
ASIC_INTEGRATION_ENABLED=false
ASIC_API_KEY=

# Community Features
COMMUNITY_VOTING_ENABLED=true
DEMOCRATIC_AGENT_SELECTION=true
TRANSPARENCY_LOGGING=true
OPEN_SOURCE_PRIORITY=true