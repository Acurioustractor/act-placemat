{
  "name": "act-placemat",
  "version": "2.0.0",
  "description": "ACT Placemat - Community-owned storytelling and project showcase platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "nx:dev": "nx run-many --target=serve --projects=frontend,backend",
    "nx:build": "nx run-many --target=build --projects=frontend,backend,intelligence",
    "nx:test": "nx run-many --target=test --projects=frontend,backend,intelligence",
    "nx:lint": "nx run-many --target=lint --projects=frontend,backend",
    "nx:graph": "nx graph",
    "yarn:dev": "yarn workspaces foreach --all --parallel --verbose run dev",
    "yarn:build": "yarn workspaces foreach --all --parallel --verbose run build",
    "yarn:test": "yarn workspaces foreach --all --parallel run test",
    "yarn:lint": "yarn workspaces foreach --all --parallel run lint",
    "yarn:workspaces": "yarn workspaces list",
    "dev:docker": "./dev.sh docker",
    "dev:pm2": "./dev.sh pm2",
    "dev:simple": "./dev.sh simple",
    "dev:auto": "./dev.sh auto",
    "stop": "./stop.sh",
    "start:ecosystem": "./start-ecosystem-bulletproof.sh",
    "start:platform": "./start-full-platform.sh",
    "stop:ecosystem": "./stop-ecosystem.sh",
    "stop:platform": "./stop-full-platform.sh",
    "demo:ecosystem": "node demo-ecosystem-simple.js",
    "test:ecosystem": "node test-ecosystem-integration.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "cd apps/backend && npm start",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:backend": "cd apps/backend && npm run test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:apps": "nx run-many --target=lint --all",
    "lint:packages": "eslint packages --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:all": "nx run-many --target=type-check --all",
    "code-quality": "npm run lint && npm run format:check && npm run type-check",
    "prepare": "husky",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules",
    "clean:logs": "rm -f logs/*.log logs/*.pid",
    "setup": "npm install && npm run setup:apps",
    "setup:apps": "cd apps/frontend && npm install && cd ../backend && npm install",
    "health": "curl -s http://localhost:3000/health || curl -s http://localhost:4000/health",
    "status": "lsof -i :3000,4000,5173,5174 || echo 'No processes found on development ports'",
    "automation:alerts": "node tools/automation/opportunity-alerts.js",
    "automation:email": "node tools/automation/weekly-action-email.js"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{css,scss,sass}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "^9.8.0",
    "@expo/cli": "~0.21.8",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@nx/devkit": "21.3.11",
    "@nx/eslint": "^21.3.11",
    "@nx/eslint-plugin": "21.3.11",
    "@nx/expo": "21.3.11",
    "@nx/jest": "21.3.11",
    "@nx/js": "^21.3.11",
    "@nx/nest": "21.3.11",
    "@nx/next": "21.3.11",
    "@nx/node": "^21.3.11",
    "@nx/playwright": "21.3.11",
    "@nx/vite": "^21.3.11",
    "@nx/web": "21.3.11",
    "@nx/webpack": "21.3.11",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/dom": "10.4.0",
    "@testing-library/jest-native": "~5.4.3",
    "@testing-library/react": "16.1.0",
    "@testing-library/react-native": "~12.9.0",
    "@types/jest": "^30.0.0",
    "@types/node": "18.16.9",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "autoprefixer": "10.4.21",
    "babel-jest": "^30.0.2",
    "babel-preset-expo": "~12.0.1",
    "concurrently": "^9.2.0",
    "eslint": "^9.8.0",
    "eslint-config-next": "^15.2.4",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-expo": "~52.0.2",
    "jest-util": "^30.0.2",
    "nx": "21.3.11",
    "postcss": "8.5.6",
    "prettier": "^3.6.2",
    "react-test-renderer": "~18.3.1",
    "tailwindcss": "4.1.12",
    "ts-jest": "^29.4.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.29.0",
    "webpack-cli": "^5.1.4",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.0",
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/act-org/act-placemat.git"
  },
  "keywords": [
    "community",
    "storytelling",
    "empathy-ledger",
    "social-impact",
    "open-source",
    "react",
    "typescript",
    "express"
  ],
  "author": "A Curious Tractor",
  "license": "MIT",
  "dependencies": {
    "@expo/metro-config": "~0.19.4",
    "@expo/metro-runtime": "~4.0.0",
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "axios": "^1.11.0",
    "chalk": "^5.5.0",
    "expo": "53.0.20",
    "expo-splash-screen": "~0.29.13",
    "expo-status-bar": "~2.0.0",
    "http-proxy-middleware": "^3.0.5",
    "next": "~15.2.4",
    "pg": "^8.16.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.81.0",
    "react-native-svg": "~15.8.0",
    "react-native-svg-transformer": "~1.5.0",
    "react-native-web": "~0.19.13",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "ws": "^8.18.3"
  }
}
