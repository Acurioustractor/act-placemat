{
  "name": "act-placemat",
  "version": "2.0.0",
  "description": "ACT Placemat - Community-owned storytelling and project showcase platform",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/frontend",
    "apps/backend",
    "apps/intelligence-hub",
    "apps/life-os-desktop",
    "apps/life-os-mobile",
    "apps/life-os-web",
    "apps/ml-engine",
    "apps/showcase",
    "apps/workers",
    "packages/shared",
    "packages/data-integration",
    "packages/data-services", 
    "packages/database",
    "packages/financial-intelligence",
    "packages/mobile-security",
    "packages/schemas",
    "packages/security",
    "packages/shared-types",
    "packages/shared-utils",
    "packages/test-utils",
    "packages/types",
    "packages/utils"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:backend": "cd apps/backend && npm run dev",
    "nx:dev": "nx run-many --target=serve --projects=frontend,backend",
    "nx:build": "nx run-many --target=build --projects=frontend,backend,intelligence",
    "nx:test": "nx run-many --target=test --projects=frontend,backend,intelligence",
    "nx:lint": "nx run-many --target=lint --projects=frontend,backend",
    "nx:graph": "nx graph",
    "yarn:dev": "yarn workspaces foreach --all --parallel --verbose run dev",
    "yarn:build": "yarn workspaces foreach --all --parallel --verbose run build",
    "yarn:test": "yarn workspaces foreach --all --parallel run test",
    "yarn:lint": "yarn workspaces foreach --all --parallel run lint",
    "yarn:workspaces": "yarn workspaces list",
    "dev:docker": "./dev.sh docker",
    "dev:pm2": "./dev.sh pm2",
    "dev:simple": "./dev.sh simple",
    "dev:auto": "./dev.sh auto",
    "stop": "./stop.sh",
    "start:ecosystem": "./start-ecosystem-bulletproof.sh",
    "start:platform": "./start-full-platform.sh",
    "stop:ecosystem": "./stop-ecosystem.sh",
    "stop:platform": "./stop-full-platform.sh",
    "demo:ecosystem": "node demo-ecosystem-simple.js",
    "test:ecosystem": "node test-ecosystem-integration.js",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd apps/frontend && npm run build",
    "build:backend": "cd apps/backend && npm run build",
    "start": "cd apps/backend && npm start",
    "test": "node tools/testing/test-runner.js",
    "test:unit": "node tools/testing/test-runner.js --types unit",
    "test:integration": "node tools/testing/test-runner.js --types integration",
    "test:e2e": "node tools/testing/test-runner.js --types e2e",
    "test:mobile": "node tools/testing/test-runner.js --types mobile",
    "test:api": "node tools/testing/test-runner.js --types api",
    "test:all": "node tools/testing/test-runner.js --types unit,integration,e2e,api",
    "test:coverage": "node tools/testing/test-runner.js --types unit,integration --coverage",
    "test:watch": "npx vitest --workspace",
    "test:ci": "node tools/testing/test-runner.js --types unit,integration,e2e,api --no-parallel --bail",
    "test:frontend": "cd apps/frontend && npm run test",
    "test:backend": "cd apps/backend && npm run test",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:apps": "nx run-many --target=lint --all",
    "lint:packages": "eslint packages --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:all": "nx run-many --target=type-check --all",
    "code-quality": "npm run lint && npm run format:check && npm run type-check",
    "prepare": "husky",
    "clean": "rm -rf apps/*/node_modules packages/*/node_modules node_modules",
    "clean:logs": "rm -f logs/*.log logs/*.pid",
    "setup": "npm install && npm run setup:apps",
    "setup:apps": "cd apps/frontend && npm install && cd ../backend && npm install",
    "health": "curl -s http://localhost:3000/health || curl -s http://localhost:4000/health",
    "status": "lsof -i :3000,4000,5173,5174 || echo 'No processes found on development ports'",
    "automation:alerts": "node tools/automation/opportunity-alerts.js",
    "automation:email": "node tools/automation/weekly-action-email.js",
    "env:check": "node tools/development/env-manager.js check",
    "env:fix": "node tools/development/env-manager.js fix",
    "env:status": "node tools/development/env-manager.js status",
    "env:backup": "tools/development/env-backup.sh backup",
    "env:backup:list": "tools/development/env-backup.sh list",
    "env:backup:restore": "tools/development/env-backup.sh restore",
    "env:backup:verify": "tools/development/env-backup.sh verify",
    "env:backup:cleanup": "tools/development/env-backup.sh cleanup",
    "env:sync": "node tools/development/env-manager.js sync",
    "env:recovery": "tools/development/env-backup.sh recovery",
    "db:migrate": "node tools/migrations/migration-runner.js migrate",
    "db:seed": "node tools/migrations/migration-runner.js seed",
    "db:status": "node tools/migrations/migration-runner.js status",
    "db:create-migration": "node tools/migrations/migration-runner.js create",
    "data:migrate": "node tools/scripts/data-migration.js",
    "data:migrate:linkedin": "node tools/scripts/data-migration.js linkedin",
    "data:cleanup": "node tools/scripts/data-migration.js cleanup",
    "data:analyze": "node tools/scripts/data-migration.js analyze"
  },
  "lint-staged": {
    "apps/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "packages/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{css,scss,sass}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@eslint/compat": "^1.1.1",
    "@eslint/eslintrc": "^2.1.1",
    "@eslint/js": "^9.8.0",
    "@expo/cli": "~0.24.14",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@next/eslint-plugin-next": "^15.2.4",
    "@nx/devkit": "21.3.11",
    "@nx/esbuild": "21.4.1",
    "@nx/eslint": "^21.3.11",
    "@nx/eslint-plugin": "21.3.11",
    "@nx/expo": "^21.4.1",
    "@nx/jest": "21.3.11",
    "@nx/js": "21.4.1",
    "@nx/nest": "21.3.11",
    "@nx/next": "21.3.11",
    "@nx/node": "21.4.1",
    "@nx/playwright": "21.3.11",
    "@nx/vite": "^21.3.11",
    "@nx/web": "21.3.11",
    "@nx/webpack": "21.3.11",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@tailwindcss/typography": "0.5.16",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "20.19.9",
    "@types/react": "~19.0.10",
    "@types/react-dom": "19.0.0",
    "@vitest/ui": "^1.6.0",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.2",
    "babel-preset-expo": "~13.2.0",
    "concurrently": "^9.2.0",
    "detox": "^20.21.0",
    "dotenv-flow": "^4.1.0",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.19.2",
    "eslint": "^9.8.0",
    "eslint-config-next": "^15.2.4",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.2",
    "jest-environment-jsdom": "^30.0.2",
    "jest-environment-node": "^30.0.2",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "jest-util": "^30.0.2",
    "lint-staged": "^15.5.2",
    "metro-config": "~0.82.4",
