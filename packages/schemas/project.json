{
  "name": "schemas",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/schemas/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/schemas",
        "main": "packages/schemas/src/index.ts",
        "tsConfig": "packages/schemas/tsconfig.json",
        "assets": ["packages/schemas/*.md"]
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/schemas/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.coverage.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/packages/schemas"
      }
    }
  },
  "tags": ["shared", "validation", "schemas"]
}