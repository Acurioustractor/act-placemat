{
  "name": "@act/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for ACT Placemat",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
