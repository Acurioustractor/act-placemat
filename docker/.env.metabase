# Metabase Configuration
# Copy to .env.metabase and configure for your environment

# Metabase Service Configuration
METABASE_PORT=3001
METABASE_URL=http://localhost:3001

# Metabase Admin User (for automated setup)
MB_ADMIN_EMAIL=admin@act.place
MB_ADMIN_PASSWORD=secure_password_change_this

# Metabase Database (if using standalone PostgreSQL)
# Leave empty to use H2 file database (default)
MB_DB_TYPE=postgres
MB_DB_DBNAME=metabase
MB_DB_HOST=metabase-db
MB_DB_PORT=5432
MB_DB_USER=metabase
MB_DB_PASS=metabase_password_change_this

# PostgreSQL Configuration (for standalone Metabase database)
POSTGRES_VERSION=14
POSTGRES_DB=metabase
POSTGRES_USER=metabase
POSTGRES_PASSWORD=metabase_password_change_this

# ACT Data Connection (for analytics dashboards)
ACT_DB_HOST=db.act.place
ACT_DB_PORT=5432
ACT_DB_NAME=postgres
ACT_DB_USER=metabase_readonly
ACT_DB_PASSWORD=readonly_password_change_this

# Analytics Configuration
MB_ENABLE_EMBEDDING=true
MB_EMBEDDING_SECRET_KEY=generate_random_64_char_key_here
MB_SITE_NAME="ACT Community Analytics"
MB_SITE_LOCALE=en

# Cache and Performance
METABASE_CACHE_TTL=3600
METABASE_QUERY_TIMEOUT=300

# Security
MB_ENABLE_XRAYS=false
MB_ENABLE_QUERY_CACHING=true
MB_ENABLE_PUBLIC_SHARING=false

# Development/Testing Options
MB_LOG_LEVEL=INFO
MB_JETTY_REQUEST_LOG=false