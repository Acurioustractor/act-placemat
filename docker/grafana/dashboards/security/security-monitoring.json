{
  "dashboard": {
    "id": null,
    "title": "Security and Network Monitoring",
    "tags": ["security", "network", "intrusion-detection", "australia"],
    "timezone": "Australia/Sydney",
    "panels": [
      {
        "id": 1,
        "title": "Failed Authentication Attempts",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=\"401\"}[5m])",
            "legendFormat": "{{route}} Failed Auth",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "failures/min",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 10
                },
                {
                  "color": "red",
                  "value": 50
                }
              ]
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate by Source IP",
        "type": "timeseries",
        "targets": [
          {
            "expr": "topk(10, rate(http_requests_total[5m]))",
            "legendFormat": "Top IPs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Suspicious Activity Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "avg(business_metrics{category=\"security_threat_level\"})",
            "legendFormat": "Threat Level",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 10,
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 5
                },
                {
                  "color": "red",
                  "value": 8
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 4,
        "title": "Active Security Incidents",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(business_metrics{category=\"active_incidents\"})",
            "legendFormat": "Active Incidents",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "incidents",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 3
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "API Rate Limiting",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=\"429\"}[5m])",
            "legendFormat": "Rate Limited Requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Data Access Patterns",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(data_source_response_time_seconds[5m])",
            "legendFormat": "{{source}} access",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "hideFrom": {
                "legend": false,
                "tooltip": false,
                "vis": false
              }
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "SSL Certificate Status",
        "type": "stat",
        "targets": [
          {
            "expr": "business_metrics{category=\"ssl_certificates\"}",
            "legendFormat": "{{domain}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "days",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 30
                },
                {
                  "color": "green",
                  "value": 90
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Firewall Block Events",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(business_metrics{category=\"firewall_blocks\"}[5m])",
            "legendFormat": "{{rule_type}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "blocks/min",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "stackSeries": "normal"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 9,
        "title": "Intrusion Detection Alerts",
        "type": "table",
        "targets": [
          {
            "expr": "business_metrics{category=\"intrusion_alerts\"}",
            "legendFormat": "{{alert_type}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "basic",
              "filterable": true,
              "sortable": true
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 24
        }
      },
      {
        "id": 10,
        "title": "Network Bandwidth Usage",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(business_metrics{category=\"network_bandwidth\"}[5m])",
            "legendFormat": "{{direction}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 32
        }
      }
    ],
    "time": {
      "from": "now-2h",
      "to": "now"
    },
    "refresh": "10s",
    "schemaVersion": 36,
    "version": 1,
    "uid": "act-security-monitoring",
    "description": "Real-time security monitoring and threat detection for ACT Placemat platform"
  }
}