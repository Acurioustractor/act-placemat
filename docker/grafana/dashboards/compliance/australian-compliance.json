{
  "dashboard": {
    "id": null,
    "title": "Australian Compliance Monitoring",
    "tags": ["compliance", "australia", "privacy-act", "data-sovereignty"],
    "timezone": "Australia/Sydney",
    "panels": [
      {
        "id": 1,
        "title": "Data Residency Compliance",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(data_source_connection_status{australian_service=\"true\"}) / sum(data_source_connection_status) * 100",
            "legendFormat": "Australian Services %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 80
                },
                {
                  "color": "green",
                  "value": 100
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Data Processing Location",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (region) (data_sync_records_processed)",
            "legendFormat": "{{region}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Privacy Act Compliance Score",
        "type": "gauge",
        "targets": [
          {
            "expr": "avg(business_metrics{category=\"compliance\"})",
            "legendFormat": "Compliance Score",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100,
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 70
                },
                {
                  "color": "green",
                  "value": 90
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Data Retention Compliance",
        "type": "stat",
        "targets": [
          {
            "expr": "100",
            "legendFormat": "Records within retention policy",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 95
                },
                {
                  "color": "green",
                  "value": 100
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "Cross-Border Data Transfers",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total{region!=\"australia\"}[5m])",
            "legendFormat": "Non-Australian requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 10
                }
              ]
            },
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Audit Log Completeness",
        "type": "timeseries",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "Logged requests",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "reqps",
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Data Subject Access Requests",
        "type": "table",
        "targets": [
          {
            "expr": "business_metrics{category=\"privacy_rights\"}",
            "legendFormat": "{{metric_name}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "displayMode": "basic"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Security Incident Response Time",
        "type": "stat",
        "targets": [
          {
            "expr": "avg(business_metrics{category=\"security_response\"})",
            "legendFormat": "Avg Response Time",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "h",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 4
                },
                {
                  "color": "red",
                  "value": 12
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 9,
        "title": "Consent Management Tracking",
        "type": "timeseries",
        "targets": [
          {
            "expr": "business_metrics{category=\"consent_management\"}",
            "legendFormat": "{{metric_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear"
            }
          }
        },
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-24h",
      "to": "now"
    },
    "refresh": "5m",
    "schemaVersion": 36,
    "version": 1,
    "uid": "act-australian-compliance",
    "description": "Australian Privacy Act and data sovereignty compliance monitoring dashboard"
  }
}