# ACT Backend Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=development
PORT=4000

# Database Configuration  
SUPABASE_URL=your_supabase_url_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=24h
JWT_ISSUER=act-platform
JWT_AUDIENCE=act-dashboard

# API Key Authentication
# Comma-separated list of valid API keys for platform access
VALID_API_KEYS=your-api-key-1,your-api-key-2

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com

# Logging
ENABLE_REQUEST_LOGGING=true

# Notion Integration
# MCP handles authentication, but you can configure specific database IDs
NOTION_PARTNERS_DATABASE_ID=your_partners_database_id
NOTION_PROJECTS_DATABASE_ID=your_projects_database_id
NOTION_OPPORTUNITIES_DATABASE_ID=your_opportunities_database_id
NOTION_ORGANIZATIONS_DATABASE_ID=your_organizations_database_id
NOTION_ACTIVITIES_DATABASE_ID=your_activities_database_id

# Legacy Notion Configuration (if not using MCP)
NOTION_TOKEN=your_notion_integration_token
NOTION_DATABASE_ID=your_main_database_id

# Metabase Analytics Configuration
METABASE_URL=http://localhost:3001
MB_ADMIN_EMAIL=admin@act.place
MB_ADMIN_PASSWORD=secure_password_change_this
MB_EMBEDDING_SECRET_KEY=your-metabase-embedding-secret-key-here-min-32-chars

# Optional Metabase Database Configuration (if not using H2)
METABASE_DB_PASS=metabase_database_password
METABASE_DB_PORT=5433
METABASE_REDIS_PORT=6380

# Email configuration for Metabase alerts and sharing
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
ALERT_EMAIL=alerts@act.place
