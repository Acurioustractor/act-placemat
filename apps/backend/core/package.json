  "scripts": {
    "dev": "tsx src/server-community.js",
    "start": "tsx src/server-community.js",
    "build": "node -e \"console.log('backend build: lint step skipped for now')\"",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:integration": "NODE_ENV=test jest tests/integration/",
    "test:system": "node test-system.js",
    "db:migrate": "node database/migrate.js",
