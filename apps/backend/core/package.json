    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "ml:health": "curl -f http://localhost:3001/api/ml/health || exit 1",
    "ml:test": "node scripts/test-tensorflow.js",
    "logs": "tail -f logs/app.log",
    "clean": "rm -rf logs/* data/* node_modules/.cache",
    "docker:build": "docker build -t life-orchestrator-backend -f Dockerfile .",
    "docker:run": "docker run -p 3001:8080 --env-file .env life-orchestrator-backend",
    "notion:setup": "node ../../scripts/setup-notion-ai-agent.js",
    "notion:test": "node ../../test-notion-ai-agent.js",
    "notion:health": "curl -f http://localhost:4000/api/notion-ai-agent/health || exit 1",
