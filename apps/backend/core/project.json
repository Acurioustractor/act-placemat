{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'Backend build completed - Node.js application'",
        "cwd": "apps/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run dev",
        "cwd": "apps/backend"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm start",
        "cwd": "apps/backend"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "command": "npm test",
        "cwd": "apps/backend",
        "reportsDirectory": "../../coverage/apps/backend"
      }
    },
    "test:coverage": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run test:coverage",
        "cwd": "apps/backend"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/backend/**/*.js"]
      }
    },
    "db:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run db:migrate",
        "cwd": "apps/backend"
      }
    },
    "db:seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm run db:seed",
        "cwd": "apps/backend"
      }
    }
  },
  "tags": ["scope:backend", "type:app"]
}