# Notion AI Business Agent Configuration
# Copy these variables to your main .env file

# Notion Integration
NOTION_INTEGRATION_TOKEN=secret_your_notion_integration_token_here
NOTION_WORKSPACE_URL=https://your-workspace.notion.site

# Notion Database IDs (configure these after creating databases)
NOTION_IDEAS_DB_ID=your_ideas_database_id_here
NOTION_TASKS_DB_ID=your_tasks_database_id_here  
NOTION_PEOPLE_DB_ID=your_people_database_id_here
NOTION_PROJECTS_DB_ID=your_projects_database_id_here
NOTION_PLAYBOOKS_DB_ID=your_playbooks_database_id_here
NOTION_MEMORY_DB_ID=your_memory_database_id_here

# Webhook Configuration (optional but recommended)
NOTION_WEBHOOK_SECRET=your_webhook_secret_here
NOTION_WEBHOOK_URL=https://your-domain.com/api/notion-ai-agent/webhook/notion-update

# Rate Limiting Configuration
NOTION_API_RATE_LIMIT_PER_SECOND=10
NOTION_API_HOURLY_LIMIT=1000
NOTION_QUEUE_MAX_SIZE=1000

# Voice Processing Configuration
OPENAI_API_KEY=your_openai_key_for_whisper
VOICE_UPLOAD_MAX_SIZE_MB=10
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,ogg

# AI Processing Configuration  
ANTHROPIC_API_KEY=your_anthropic_key_here
PERPLEXITY_API_KEY=your_perplexity_key_here

# Feature Flags
ENABLE_VOICE_CAPTURE=true
ENABLE_AUTO_SYNC=true
ENABLE_AUTOMATION_SUGGESTIONS=true
ENABLE_PATTERN_LEARNING=true
ENABLE_WEBHOOK_PROCESSING=true

# Performance Tuning
PROCESS_QUEUE_INTERVAL_MS=200
BATCH_PROCESSING_SIZE=5
PATTERN_SIMILARITY_THRESHOLD=0.6
AUTOMATION_FREQUENCY_THRESHOLD=3

# Security
ALLOWED_AUDIO_MIME_TYPES=audio/mp3,audio/wav,audio/m4a,audio/ogg
MAX_CONTENT_LENGTH=10000
WEBHOOK_SIGNATURE_VERIFICATION=true